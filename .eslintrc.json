{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error", 
            { "allow": [
                "warn", 
                "error"
                ] 
            }
        ],
        "vars-on-top": "error",
        "no-return-assign": "error",
        "max-depth": [
            "error", 4
        ]
    }
}